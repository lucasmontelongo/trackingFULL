@model WEBLayer2.Models.Agencia

@{
    ViewBag.Title = "Delete";
}

<link rel="stylesheet" href="~/Content/style.css">

<div>
    <button id="volver">
        @Html.ActionLink("Volver", "Index")
    </button>
</div>
<div class="page">
    <div class="cont">
        <div class="izq">
            <div class="titulo">Eliminar Agencia</div>
            <div id="texto" class="eula">Eliminar agencia del sistema</div>
        </div>
        <div class="der">
            <div class="form">
                <div class="form-horizontal">
                    <ul class="form-list">
                        <li class="form-list__row">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Nombre)
                                <div>
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @disabled = "disabled" } })
                                </div>
                            </div>
                        </li>
                        <li class="form-list__row">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Ubicacion)
                                <div>
                                    @Html.EditorFor(model => model.Ubicacion, new { htmlAttributes = new { @disabled = "disabled" } })
                                </div>
                            </div>
                        </li>
                        <li class="form-list__row">
                            <div class="form-group">
                                @Html.LabelFor(model => model.EnvioDomicilio)
                                <div>
                                    @Html.EditorFor(model => model.EnvioDomicilio, new { htmlAttributes = new { @disabled = "disabled" } })
                                </div>
                            </div>
                        </li>
                        <li class="form-list__row">
                            <div class="form-group">
                                @Html.LabelFor(model => model.IdEmpresa)
                                <div>
                                    @Html.EditorFor(model => model.IdEmpresa, new { htmlAttributes = new { @disabled = "disabled" } })
                                </div>
                            </div>
                        </li>
                        <li class="form-list__row">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Borrado)
                                <div>
                                    @Html.EditorFor(model => model.Borrado, new { htmlAttributes = new { @disabled = "disabled" } })
                                </div>
                            </div>
                        </li>

                    </ul>
                </div>
                
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-default" />
                    </div>

                }

            </div>
        </div>
    </div>
</div>
