@model IEnumerable<WEBLayer2.Models.Trayecto>

@{
    ViewBag.Title = "Index";
}

@section Styles{
    <style>
        .crearTrayecto {
            min-width: 100%;
            padding-left: 5px;
            padding-right: 5px;
            letter-spacing: .5px;
            border: 0;
            border-bottom: 2px solid #f0f0f0;
            background-color: transparent;
        }

            .crearTrayecto:valid {
                border-color: #87B7F1;
            }
       
            .modal-header{
                background-color: #36304a;
                border-top-left-radius: 5px;
                border-top-right-radius: 5px;
            }

            h4{
                color: white;
                font-weight: bold;
            }
    </style>
}

<link rel="stylesheet" href="~/Content/tabla_clientes.css" type="text/css" />
<link rel="stylesheet" href="~/Content/util.css" type="text/css" />
<link rel="stylesheet" href="~/Content/main.css" type="text/css" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Oswald&display=swap" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
<script src="~/Scripts/main.js" type="text/javascript"></script>

<link rel="stylesheet" type="text/css" href="~/Content/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="~/Scripts/pagination_trayecto.js"></script>
<script type="text/javascript" charset="utf8" src="~/Scripts/jquery.dataTables.js"></script>

<body style=" background: url(../../img/trackingFULL.PNG) no-repeat center center fixed; background-size: cover;">
    <button class="nuevo" data-toggle="modal" data-target="#crearTrayecto" style="margin: 2% 2% 2% 0">
        <i class="fas fa-plus-square"></i> Nuevo trayecto
    </button>

    <div>
        <div class="container-table100">
            <div class="wrap-table100">
                <div class="table100 ver1 m-b-110">
                    <table id="trayecto" class="table display" data-vertable="ver1">
                        <thead>
                            <tr class="row100 head">
                                <th class="column100 column1" data-column="column1">
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th class="column100 column2" data-column="column2"></th>
                                <th class="column100 column3" data-column="column3"></th>
                                <th class="column100 column4" data-column="column4"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="row100">
                                    <td class="column100 column1" data-column="column1">
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td class="column100 column2" data-column="column2">
                                        <button class="editar">
                                            <i class="fas fa-edit"></i> @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                                        </button>
                                    </td>
                                    <td class="column100 column3" data-column="column3">
                                        <button class="detalles">
                                            <i class="fas fa-info-circle"></i> @Html.ActionLink("Detalles", "Details", new { id = item.Id })
                                        </button>
                                    </td>
                                    <td class="column100 column4" data-column="column4">
                                        <button class="borrar">
                                            <i class="fas fa-trash-alt"></i> @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("Create", "Trayecto", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="modal fade" id="crearTrayecto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="exampleModalLabel">Crear trayecto</h4>                      
                    </div>
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <label>Nombre</label>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="text" class="crearTrayecto" id="nombre" name="nombre" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-success">Crear trayecto</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>