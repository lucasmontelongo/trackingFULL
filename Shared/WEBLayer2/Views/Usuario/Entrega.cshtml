@model WEBLayer2.Models.EnvioDomicilioDTO

@{
    ViewBag.Title = "Entrega";
}

<h2>Entrega</h2>

@if (ViewBag.ERROR != null)
{
    <p>@ViewBag.ERROR</p>
}
else
{
    if (ViewBag.DOMICILIO == "true")
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>EnvioDomicilioDTO</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(eb => eb.IdPaquete, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(eb => eb.IdPaquete, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(eb => eb.IdPaquete, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(eb => eb.Envio, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(eb => eb.Envio)
                            @Html.ValidationMessageFor(eb => eb.Envio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(eb => eb.Hora, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(eb => eb.Hora, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(eb => eb.Hora, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>Este paquete no dispone de envío a domicilio</p>
    }
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
