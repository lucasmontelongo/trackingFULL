@model IEnumerable<WEBLayer2.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="~/Content/tabla_clientes.css" type="text/css" />
<link rel="stylesheet" href="~/Content/animate.css" type="text/css" />
<link rel="stylesheet" href="~/Content/select2.min.css" type="text/css" />
<link rel="stylesheet" href="~/Content/perfect-scrollbar.css" type="text/css" />
<link rel="stylesheet" href="~/Content/util.css" type="text/css" />
<link rel="stylesheet" href="~/Content/main.css" type="text/css" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Oswald&display=swap" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Scripts/popper.js" type="text/javascript"></script>
<script src="~/Scripts/select2.min.js" type="text/javascript"></script>
<script src="~/Scripts/main.js" type="text/javascript"></script>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="~/Scripts/pagination.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>

<body>
    <button class="nuevo" style="margin: 2% 2% 2% 0">
        <i class="fas fa-plus-square"></i> @Html.ActionLink("Nuevo cliente", "Create")
    </button>

    <div>
        <div class="container-table100">
            <div class="wrap-table100">
                <div class="table100 ver1 m-b-110">
                    <table id="clientes" class="table display" data-vertable="ver1">
                        <thead>
                            <tr class="row100 head">
                                <th class="column100 column1" data-column="column1">
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th class="column100 column2" data-column="column2">
                                    @Html.DisplayNameFor(model => model.NombreCompleto)
                                </th>
                                <th class="column100 column3" data-column="column3">
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>
                                <th class="column100 column4" data-column="column4">
                                    @Html.DisplayNameFor(model => model.NumeroDocumento)
                                </th>
                                <th class="column100 column5" data-column="column5">
                                    @Html.DisplayNameFor(model => model.TipoDocumento)
                                </th>
                                <th class="column100 column6" data-column="column6"></th>
                                <th class="column100 column7" data-column="column7"></th>
                                <th class="column100 column8" data-column="column8"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr class="row100">
                                    <td class="column100 column1" data-column="column1">
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td class="column100 column2" data-column="column2">
                                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                                    </td>
                                    <td class="column100 column3" data-column="column3">
                                        @Html.DisplayFor(modelItem => item.Telefono)
                                    </td>
                                    <td class="column100 column4" data-column="column4">
                                        @Html.DisplayFor(modelItem => item.NumeroDocumento)
                                    </td>
                                    <td class="column100 column5" data-column="column5">
                                        @Html.DisplayFor(modelItem => item.TipoDocumento)
                                    </td>
                                    <td class="column100 column6" data-column="column6">
                                        <button class="editar">
                                            <i class="fas fa-edit"></i> @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                                        </button>
                                    </td>
                                    <td class="column100 column7" data-column="column7">
                                        <button class="detalles">
                                            <i class="fas fa-info-circle"></i> @Html.ActionLink("Detalles", "Details", new { id = item.Id })
                                        </button>
                                    </td>
                                    <td class="column100 column8" data-column="column8">
                                        <button class="borrar">
                                            <i class="fas fa-trash-alt"></i> @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>