
@{
    ViewBag.Title = "Manejar";
}

@if (ViewBag.ERROR != null)
{
    <p>@ViewBag.ERROR</p>
}
@if (ViewBag.OK != null)
{
    <p>@ViewBag.OK</p>
}

<h2>Manejar</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-10">
            <input name="idPaquete" placeholder="Codigo del paquete" type="number" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <select name="accion">
                <option value="avanzar">Avanzar</option>
                <option value="retroceder">Retroceder</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enviar" class="btn btn-default" />
        </div>
    </div>
}