@model IEnumerable<WEBLayer2.Models.Paquete>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaEntrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdTrayecto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdRemitente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdDestinatario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FechaIngreso)
        </td>
        <td>
            @if (item.FechaIngreso != item.FechaEntrega)
            {
                @Html.DisplayFor(modelItem => item.FechaEntrega)
            }
            else
            {
                <span>En viaje</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdTrayecto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdRemitente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdDestinatario)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
